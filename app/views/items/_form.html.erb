    <%= form_for([@user,@item]) do |f| %>
     <h4 class="title">アイテム情報の入力</h4>
     <p id="alert"><%= alert %></p>

      <div>

        <div class="form-group">
          <%= f.label 'アイテム名' %><br>
          <%= f.text_field :item_name, :class =>'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label 'メーカー' %><br>
          <%= f.text_field :maker, :class =>'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label 'イメージ' %><br>
          <%= f.file_field :image %>
        </div>

          <%= f.hidden_field :latitude%>
          <%= f.hidden_field :longitude%>

      </div>

          <%= f.submit "Submit", :class => "btn btn-primary" %>

      </div>
    <% end %>
  </div>
</div>