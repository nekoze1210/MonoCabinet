<%= form_for([current_user, @item]) do |f| %>
  <h4 class="title">アイテム情報の入力</h4>
  <div>
    <div class="form-group">
      <%= f.label 'アイテム名' %><br>
      <%= f.text_field :name, class: 'form-control', maxlength: '20' %>
    </div>
    <div class="form-group">
      <%= f.label 'メーカー' %><br>
      <%= f.text_field :maker, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label 'イメージ' %><br>
      <%= f.file_field :image %>
    </div>
      <%= f.fields_for :locations do |b| %>
      <%= b.hidden_field :latitude  %>
      <%= b.hidden_field :longitude  %>
    <% end %>
    <%= f.submit "Submit", class: "btn btn-primary", id: "new_item_submit", data: { 'loading-text': "位置情報を取得中" } %>
  </div>
<% end %>
