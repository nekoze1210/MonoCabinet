<p id="notice" style="padding-top: 10px"><%= notice %></p>

<div class="container">


<div class="row-fruid">

 <%@items.each do |item| %>
    <div class="col-md-6 col-xs-12">
    <div class="thumbnail ">
      <% if item.image? %><a href="/users/<%=current_user.id%>/items/<%= item.id %>"><%=image_tag item.image.url, :size => "300x300"%></a>
      <%else%>
      <a href="/users/<%=current_user.id%>/items/<%= item.id %>"><%=image_tag 'noimage.png', :size => "300x300" %>
      <%end%>

      <div class="caption text-center">
        <h3><a href="/user/<%=current_user.id%>/item/<%=item.id%>">【<%= item.maker %>】<%= item.item_name %></a></h3>
      </div>
    </div>
  </div>
<% end %>
  </div>
  </div>
<br>


<div class="col-md-12 text-center">
<%= paginate(@items) %>
  </div>

