
<% if current_user.items.length == 0  %>
  <div class="container text-center">
  <h3>まずはチュートリアルで使い方を知ろう!</h3>
  <%= link_to 'How to Otoshimonno??', help_path, :class => 'btn btn-embossed btn-primary' %>
</div>
<% end %>

<div class="container">
<div class="row-fruid">
 <%@items.each do |item| %>
    <div class="col-md-4 col-xs-12 mh">
    <div class="thumbnail">
      <% if item.image? %><a href="/users/<%=current_user.id%>/items/<%= item.id %>"> <%=image_tag item.image.url, :class => 'img img-responsive', :size => '300x300', :style => 'margin: 0 auto;'%></a>
      <%else%>
      <a href="/users/<%=current_user.id%>/items/<%= item.id %>"><%=image_tag 'noimage.png', :size => "300x300" %>
      <%end%>
      <div class="caption text-center">
      <h3><a href="/users/<%=current_user.id%>/items/<%=item.id%>"><%= item.item_name %></a></h3>
      </div>
    </div>
  </div>
<% end %>
  </div>
  </div>
<br>
<div class="col-md-12 text-center">
<%= paginate(@items) %>
  </div>


