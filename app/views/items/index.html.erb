<p id="notice"><%= notice %></p>

<h1>ItemLine</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Maker</th>
      <th>Image</th>
      <th>address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_name %></td>
        <td><%= item.maker %></td>
        <td><%= image_tag item.image.url %></td>
        <td><%= item.address%></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

