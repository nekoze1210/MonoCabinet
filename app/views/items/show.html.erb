

<div class="col-md-9" style="padding-top: 20px;">

  <div class="col-md-6" >
    <%= image_tag @item.image.url, :size => "250 x 250", :class => 'img img-responsive' %>
  </div>

  <div class="col-md-6"style="width: 300px;height: 300px;">
    <p>
    <%= @item.item_name %>
    </p>

    <p>
    <strong>Maker:</strong>
    <%= @item.maker %>
    </p>
  </div>



    <div id="map" style='width: 600px; height: 400px;'></div>


  <script src="//maps.google.com/maps/api/js?v=3.22&amp;&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
  </script>

  </div>

